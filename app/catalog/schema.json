{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Catalog products schema",
  "type": "object",
  "required": ["products"],
  "properties": {
    "version": {},
    "products": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "title", "images", "order"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "title": {
            "type": "string",
            "minLength": 1
          },
          "images": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "order": {
            "type": "object",
            "required": ["velavie_link"],
            "properties": {
              "velavie_link": {
                "type": "string",
                "minLength": 1
              }
            }
          }
        }
      }
    }
  }
}
