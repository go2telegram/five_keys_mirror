{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://go2telegram.github.io/five_keys_bot/products.schema.json",
  "title": "Products catalog",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "required": [
      "id",
      "name",
      "short",
      "description",
      "usage",
      "contra",
      "buy_url",
      "category",
      "tags",
      "image"
    ],
    "properties": {
      "id": {
        "type": "string",
        "minLength": 1
      },
      "name": {
        "type": "string",
        "minLength": 1
      },
      "short": {
        "type": "string",
        "minLength": 1
      },
      "description": {
        "type": "string",
        "minLength": 1
      },
      "usage": {
        "type": "string",
        "minLength": 1
      },
      "contra": {
        "type": "string",
        "minLength": 1
      },
      "buy_url": {
        "type": "string",
        "format": "uri"
      },
      "category": {
        "type": "string",
        "minLength": 1
      },
      "tags": {
        "type": "array",
        "items": {
          "type": "string",
          "minLength": 1
        },
        "uniqueItems": true
      },
      "image": {
        "type": "string",
        "pattern": "^https?://.+"
      }
    }
  },
  "uniqueItems": true
}
